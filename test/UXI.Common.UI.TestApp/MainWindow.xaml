<Window x:Class="UXI.Common.UI.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UXI.Common.UI.TestApp"
        xmlns:ex="clr-namespace:UXI.Common.UI.Extensions;assembly=UXI.Common.UI"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ex:WindowInteropEx.IsTransparent="True"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal">

            <Rectangle Stroke="White" StrokeThickness="3" 
                       Width="100" Height="100" 
                       Fill="Red"
                       IsHitTestVisible="False"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       Margin="0,0,0,100" />

            <Rectangle Stroke="White" StrokeThickness="3" 
                       Width="100" Height="100" 
                       Fill="Green"
                       IsHitTestVisible="True"
                       VerticalAlignment="Center" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
